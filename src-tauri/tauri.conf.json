{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Clipboard Manager",
  "version": "0.1.0",
  "identifier": "com.clipboard-manager.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Clipboard Manager",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "minimizable": true,
        "maximizable": true,
        "closable": true,
        "skipTaskbar": false,
        "alwaysOnTop": false,
        "decorations": true,
        "transparent": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "sql": {
      "allow-load": [
        "sqlite:*"
      ]
    },
    "fs": {
      "scope": ["$CONFIG/*"]
    }
  }
}
